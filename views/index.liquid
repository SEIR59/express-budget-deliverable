</head>
<body>
    <h1>Budgtr ALL</h1>
    <h2>{{bankAccount}}</h2>
    <div class="container">
        <table>
            {%for budget in allBudget%}
            <tr>
                <td>{{budget.date}}</td>
                <td><a href="/budget/{{forloop.index0}}">{{budget.name}}</a></td>
                <td>{{budget.amount}}</td>
            </tr>
            {%endfor%}
        </table>
    </div>
    <a href="budget/new"><button>New Transaction</button></a>
</body>
